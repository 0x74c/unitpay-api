{
	"compilerOptions": {
		"outDir": ".build",
		"target": "ESNext",
		"module": "ESNext",
		"lib": [
			"ESNext"
		],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"incremental": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noUncheckedIndexedAccess": true,
		"declaration": true
	},
	"include": [
		"src/**/*.ts"
	]
}